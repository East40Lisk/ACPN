{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "controller", "domains", "quorum", "issuedAt", "expiresAt", "signature"],
  "properties": {
    "id": { "type": "string", "pattern": "^did:acpn:" },
    "controller": { "type": "string" },
    "domains": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "quorum": { "type": "integer", "minimum": 1 },
    "issuedAt": { "type": "integer" },
    "expiresAt": { "type": "integer" },
    "signature": {
      "$ref": "signature.schema.json"
    }
  }
}
